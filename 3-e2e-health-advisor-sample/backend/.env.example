# Azure Configuration
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_TENANT_ID=your_tenant_id
PROJECT_CONNECTION_STRING=eastus2.api.azureml.ms;your-project-id;your-deployment;your-project
MODEL_DEPLOYMENT_NAME=your_model_name

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/dbname
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=postgres
POSTGRES_HOST=your_db_host
POSTGRES_PORT=5432

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=drug-development-platform
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=development

# Audit Logging
LOG_LEVEL=INFO
AUDIT_LOG_PATH=/var/log/drugdev/data_access.log
